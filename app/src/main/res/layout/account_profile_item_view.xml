<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="?attr/selectableItemBackground">
    <TextView
        android:id="@+id/account_profile_item_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_normal"
        android:textSize="@dimen/common_text_size_large"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        tools:ignore="RelativeOverlap" />
    <TextView
        android:id="@+id/account_profile_item_content_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_margin_normal"
        android:textSize="@dimen/common_text_size_normal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        tools:ignore="RelativeOverlap"/>
    <ImageView
        android:id="@+id/account_profile_item_content_image_view"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/common_margin_normal"/>
</RelativeLayout>