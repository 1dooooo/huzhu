<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDeepSkyBlue"
    android:fitsSystemWindows="true"
    tools:context="com.example.zzu.huzhucommunity.activities.SearchResultActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/SearchResultActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetStart="0dp">
        <TextView
            android:id="@+id/SearchResultActivity_input_text_view"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/common_margin_small"
            android:paddingEnd="@dimen/common_margin_small"
            android:layout_marginEnd="@dimen/common_margin_large"
            android:layout_marginTop="@dimen/common_margin_small"
            android:layout_marginBottom="@dimen/common_margin_small"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/common_text_size_large"/>
    </android.support.v7.widget.Toolbar>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDeepSkyBlue"
            app:elevation="0dp">
            <android.support.design.widget.TabLayout
                android:id="@+id/SearchResultActivity_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="@color/colorRiceWhite"
                app:tabSelectedTextColor="@color/colorWhite"
                app:tabIndicatorColor="@color/colorDodgerBlue"
                app:tabTextAppearance="?android:attr/textAppearanceMedium"
                app:layout_scrollFlags="enterAlways|snap|scroll">
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/SearchResultActivity_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
