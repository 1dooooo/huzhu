<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/UserProfile_top_background_image_view"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/UserProfile_me_top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="start|top"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:titleTextColor="@color/colorWhite"
            app:title="@string/userProfile"
            app:layout_collapseMode="pin"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_large"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/UserProfile_me_image_view"
                android:contentDescription="@string/app_name"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/common_margin_large"
                android:src="@drawable/profile_head"/>
            <TextView
                android:id="@+id/UserProfile_me_name_text_view"
                android:layout_toEndOf="@id/UserProfile_me_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/common_text_size_large"
                android:layout_marginStart="@dimen/common_margin_normal"
                android:text="@string/setting"/>
        </RelativeLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_src="@drawable/publish_plane"
                app:item_text="@string/resourcePublished"/>
            <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_text="@string/resourceReceived"
                app:image_src="@drawable/receive"/>
            <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_src="@drawable/star"
                app:item_text="@string/star" />
            <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:item_text="@string/track"
                app:image_src="@drawable/track"/>
            <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_src="@drawable/comment"
                app:item_text="@string/comment"/>
            <com.example.zzu.huzhucommunity.customlayout.UserProfileItemLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:image_src="@drawable/setting"
                app:item_text="@string/setting"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>