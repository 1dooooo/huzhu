<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/common_margin_normal">
    <TextView
        android:clickable="false"
        android:id="@+id/ResourceDetailBottomButton_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/receive"/>
    <ImageView
        android:clickable="false"
        android:id="@+id/ResourceDetailBottomButton_image_view"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_margin_small"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/chat_gray"/>
</LinearLayout>