<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin_normal"
    android:background="@color/colorWhite">
    <ImageView
        android:id="@+id/CommentItem_user_head_image"
        android:contentDescription="@string/app_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile_head"/>
    <TextView
        android:id="@+id/CommentItem_user_name_text_view"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_small"
        android:layout_marginStart="@dimen/common_margin_normal"
        android:layout_alignTop="@id/CommentItem_user_head_image"
        android:layout_toEndOf="@id/CommentItem_user_head_image"
        android:textSize="@dimen/common_text_size_normal"/>
    <TextView
        android:id="@+id/CommentItem_time_text_view"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/common_margin_normal"
        android:layout_toEndOf="@id/CommentItem_user_name_text_view"
        android:layout_alignTop="@id/CommentItem_user_name_text_view"/>
    <TextView
        android:id="@+id/CommentItem_content_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_margin_normal"
        android:layout_marginTop="@dimen/common_margin_small"
        android:layout_below="@id/CommentItem_user_name_text_view"
        android:layout_toEndOf="@id/CommentItem_user_head_image"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/common_text_size_large"/>
</RelativeLayout>